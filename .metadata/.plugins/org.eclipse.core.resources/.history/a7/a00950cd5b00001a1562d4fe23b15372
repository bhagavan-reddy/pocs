	<http:listener-config name="HTTP_Listener_config" doc:name="HTTP Listener config" doc:id="11de38db-ad0d-4b00-b314-6252efc79a94" >
		<http:listener-connection host="localhost" port="8081" />
	</http:listener-config>
	<sub-flow name="ey-advisory-subflow" doc:id="9cb5ce4c-930b-4176-89de-7902f5fe66d8" >
		<logger level="INFO" doc:name="Log company and service line" doc:id="86000259-fcbd-47ac-a4ef-d0823cb3485e" message='#[vars.company as String ++ " and " ++ vars.serviceLine as String]'/>
		<ee:transform doc:name="companyCode var" doc:id="7c5ee3f5-b493-4a8a-892e-d021ddf8373e" >
			<ee:message >
			</ee:message>
			<ee:variables >
				<ee:set-variable variableName="companyCode" ><![CDATA[%dw 2.0
output application/json
---
vars.company ++ "-" ++ vars.serviceLine 
]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
	</sub-flow>
	<sub-flow name="ey-other-serviceLine-subflow" doc:id="a6af2f79-36de-4ffa-a1ba-0e49a2488469" >
		<logger level="INFO" doc:name="Log company and service line" doc:id="79a54cbb-3710-4cf4-af6e-254a280cabdc" message='#[vars.company as String ++ " and " ++ vars.serviceLine as String]'/>
		<ee:transform doc:name="companyCode var" doc:id="68cd0059-ecc2-439b-b437-a6f00457f6d8" >
			<ee:message >
			</ee:message>
			<ee:variables >
				<ee:set-variable variableName="companyCode" ><![CDATA[%dw 2.0
output application/json
---
vars.company ++ "-" ++ vars.serviceLine 
]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
	</sub-flow>
	<flow name="choiceflow" doc:id="7da3c273-d7d2-44cf-a10a-134e5aed0b4e" >
		<choice doc:name="Choice" doc:id="d0ba0e84-3bfc-416c-b983-e6025f10b0ac" >
			<when expression="#[vars.company=='EY' and vars.serviceLine=='ADVISORY']">
				<flow-ref doc:name="ey-advisory-subflow" doc:id="6e38fc17-44e9-4d30-af79-1b6e046d7ff3" name="ey-advisory-subflow"/>
			</when>
			<when expression="#[vars.company=='EY' and (['ASSURANCE', 'TAX', 'TRANSACTION ADVISORY'] contains(vars.serviceLine))]">
				<flow-ref doc:name="ey-other-serviceLine-subflow" doc:id="972b3180-2222-4d77-ae0a-a58caa90c9ea" name="ey-other-serviceLine-subflow"/>
			</when>
			<otherwise>
				<logger level="INFO" doc:name="Logger" doc:id="2d9ecaed-673e-475c-9620-737ece04c4e5" message='#["Company should be EY and serviceLine may be {Advisory, Assurance, Tax, Transaction Advisory}"]'/>
			</otherwise>
		</choice>
	</flow>
	<flow name="poc-munitFlow" doc:id="e1847747-27fd-4b3f-8bb3-f3d038ca4645">
		<http:listener doc:name="Listener" doc:id="e5fb13f7-6fee-4b33-82e9-62c139593fe0" config-ref="HTTP_Listener_config" path="/test-Munit" />
		<set-variable value="#[upper(attributes.queryParams.company)]" doc:name="company" doc:id="79941101-1383-42d4-8b4a-6a0781b603ab" variableName="company" />
		<set-variable value="#[upper(attributes.queryParams.serviceLine)]" doc:name="serviceLine" doc:id="4ced9cc4-6f91-4b0c-953e-91e88e772852" variableName="serviceLine" />
		<flow-ref doc:name="choiceflow" doc:id="c3466648-60b9-40be-ae3b-b82f44a90328" name="choiceflow" />
		<choice doc:name="Choice" doc:id="0d5957b0-751e-4c3b-b744-964148215930">
			<when expression="#[vars.companyCode=='EY-ADVISORY']">
				<logger level="INFO" doc:name="Log company code" doc:id="f4fdef8d-4b18-4904-aa05-fa03b0a66389" message='#[":::::::::The company code is " ++ vars.companyCode as String]' />
				<set-payload value="#[vars.companyCode]" doc:name="company code" doc:id="bfdd20a5-29d0-46de-95a0-ca1208801c21" />
			</when>
			<when expression="#[vars.companyCode=='EY-TAX' or vars.companyCode=='EY-ASSURANCE' or vars.companyCode=='EY-TRANSACTION ADVISORY']">
				<logger level="INFO" doc:name="Log company code" doc:id="20e81e1d-1ba6-4c62-a26b-415a3de188d7" message='#[":::::::::The company code is " ++ vars.companyCode as String]' />
				<set-payload value="#[vars.companyCode]" doc:name="company code" doc:id="7623f6fa-3422-475f-8bba-af482413991a" />
			</when>
			<otherwise>
				<logger level="INFO" doc:name="log valid company codes" doc:id="a46af98f-354f-4aa0-b6a7-8de93658eb22" message='#["Invalid company and/or serviceLine query parameters"]' />
				<set-payload value='#["::: company should be EY and "++
"::: serviceLine may be {Advisory,Tax,Assurance,Transaction Advisory}"++
"::: company code should be {EY-ADVISORY,EY-TAX,EY-TRANSACTION ADVISORY,EY-ASSURANCE}"]' doc:name="valid inputs" doc:id="e18fb0ce-a0e0-4300-b13c-fc8938ef93ae" />
			</otherwise>
		</choice>
	</flow>
